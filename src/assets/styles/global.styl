
@import './variable'
@import './mixin'
// 容器
.page-full,
.page-rich,
.page
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  // overflow-x hidden
  overflow-y auto
  // margin 0 auto
  // max-width 470px
  background-color $color-bg
  line-height 1.4
  -webkit-overflow-scrolling touch
  .page,
  .page-full,
  .page-rich
    z-index 200
    height 100vh
    // transform translateY(0)
.page.page-flex,
.page-rich.page-flex
  flexColAlign()
  overflow-y hidden
  .page-flex-wrap
    position relative
    flex 1
    overflow-y auto
    width 100%
    height 0
// .page,
// .page-rich
// overflow-x hidden
// margin 0 auto
// max-width 470px
// background $linear
// line-height 1.4
.page-bg
  background $linear-bg
.page-pd
  padding-top $padding-l
  padding-right $padding
  padding-bottom $padding-l
  padding-left $padding
.page-pd-l
  padding-top $padding-l
  padding-right $padding-l
  padding-bottom $padding-l
  padding-left $padding-l
.page-bar
  position relative
  z-index 501
  width 100%
  background-color rgba(255, 255, 255, 0.9)
  box-shadow 0 -2px 10px 0 rgba(0, 72, 139, 0.1)
body,
.page,
.page-rich,
.page-full
  .white-bg
    background-color #fff
  .grey-bg
    background-color $color-grey
  .tc
    text-align center
  .fb
    font-weight bold
  .mclr
    color $color-main
  .dmclr
    color $color-main-d
  .lclr
    color $color-font-l
  .mlclr
    color $color-font-ml
  .hlclr
    color $color-font-hl
  .pd
    padding 0 $padding 30px
  .pd-l
    padding 0 $padding-l 30px
  .fs16
    font-size 16px
  .fs12
    font-size 12px
.animate__animated.ani-faster
  animation-duration 50ms
.animate__animated.ani-fast
  animation-duration 100ms
.animate__animated.ani-normal
  animation-duration 200ms
// icon、图片
.svg-wrap
  font-size 16px
  line-height 0
.img-wrap
  line-height 0
  img
    width 100%
// 背景图
.img-bg
  background-color $color-grey
  background-position center
  background-size cover
  background-repeat no-repeat
.btn-wrap
  margin-top 50px
  .btn + .btn
    margin-top 20px
.dialog-case
  z-index 1111
  .case-wrap
    positionTL(50%, 50%, -50%, -60%)
    width 85%
    background-color #fff
    .case-wrap-detail
      // positionFull()
      overflow-x hidden
      overflow-y auto
      max-height 75vh
      -webkit-overflow-scrolling touch
    // .img-wrap,
    .svg-wrap
      positionBL(-15px, 50%, -50%, 100%)
      flexAlign(center)
      width 30px
      height 30px
      border-radius 50%
      background-color #fff
      font-size 14px
.scroll
  background $color-bg
  .fixed-top
    background-color #fff
.line-bg
  width 100%
  height 10px
  background-color $color-bg
.pdf-wrap
  .pageNum
    position relative
    z-index 11
    padding 0 25px
  .viewerContainer
    positionTL(0, 0)
    box-sizing border-box
    padding 0 15px
    width 100%
    height 100%
  .pinch-zoom-container
    overflow-x hidden
    height auto !important
  .pageContainer
    max-width 100% !important
    img
      width 100%
