* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
ul,
ol {
  list-style: none;
}
a {
  text-decoration: none;
  color: inherit;
  &:hover {
    text-decoration: underline;
    cursor: pointer;
  }
}
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: normal;
}

body {
  font-size: 16px;
  // 为什么这样写 font-family
  // 答案见 https://github.com/zenozeng/fonts.css/
  line-height: 1.5;
  color: #1d2c40;
  font-family: -apple-system, 'Noto Sans', 'Helvetica Neue', Helvetica,
    'Nimbus Sans L', Arial, 'Liberation Sans', 'PingFang SC', 'Hiragino Sans GB',
    'Noto Sans CJK SC', 'Source Han Sans SC', 'Source Han Sans CN',
    'Microsoft YaHei', 'Wenquanyi Micro Hei', 'WenQuanYi Zen Hei', 'ST Heiti',
    SimHei, 'WenQuanYi Zen Hei Sharp', sans-serif;
}
.icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}

html,
body
  width 100%
  height 100%
body
  margin 0
  padding 0
  border 0
  color $color-font
  vertical-align baseline
  font-weight normal
  font-size $font-size
  font-family BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Hiragino Sans GB', Arial, sans-serif
  line-height 1
  -webkit-text-size-adjust none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-text-size-adjust none !important
pre
  margin 0
  font-family BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Hiragino Sans GB', Arial, sans-serif
/* 表单
---------------------------------------------------------- */
button,
input,
textarea
  outline none
  border none
  background-color transparent
  font-family BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Hiragino Sans GB', Arial, sans-serif
input,
textarea
  width 100%
  color $field-ipt-clr
  font-size $field-ipt-fs
  line-height 1.4
  caret-color $color-main
  &:disabled
    color $field-disabled-clr
    opacity 1
    -webkit-opacity 1
input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder,
input:disabled::-webkit-input-placeholder,
textarea:disabled::-webkit-input-placeholder
  color $color-font-hl !important
input::-moz-placeholder,
textarea::-moz-placeholder,
input:disabled::-moz-placeholder,
textarea:disabled::-moz-placeholder
  color $color-font-hl !important
input:-moz-placeholder,
textarea:-moz-placeholder,
input:disabled:-moz-placeholder,
textarea:disabled:-moz-placeholder
  color $color-font-hl !important
input:-ms-input-placeholder,
textarea:-ms-input-placeholder,
input:disabled:-ms-input-placeholder,
textarea:disabled:-ms-input-placeholder
  color $color-font-hl !important
.btn
  width 100%
  height $field-btn-h
  border-radius $field-btn-bd-r
  background-color #fff
  color $color-main
  font-size $field-btn-fs
  &:disabled
    background $field-btn-disabled
    color $color-font-l
  &.btn-s
    height $field-btn-hs
    border-radius $field-btn-bd-rs
    font-size 15px
.btn-default
  background-color $color-main-alpha
  color $color-main
    &:disabled
      opacity 0.5
.btn-main
  background-color $color-main
  box-shadow 0px 2px 4px 0px rgba(208, 206, 206, 0.5)
  color #fff
  &:disabled
    opacity 0.5
/* 边框
---------------------------------------------------------- */
.border-a,
.border-a-r *
  position relative
.border-a,
.border-t,
.border-b,
.border-tb,
.border-l,
.border-r,
.border-a-r
  position relative
.border-a
  &::before
    setLine()
.border-a-r
  &::before
    setLineR()
.border-t
  &::before
    setTopLine()
.border-b
  &::after
    setBottomLine()
.border-tb
  &::before
    setTopLine()
  &::after
    setBottomLine()
.border-l
  &::before
    setLeftLine()
.border-r
  &::after
    setRightLine()
// ios底部安全距离-padding
.savepadding
  box-sizing content-box
  padding-bottom constant(safe-area-inset-bottom)
  padding-bottom env(safe-area-inset-bottom)
// ios底部安全距离-bottom
.savebottom
  bottom constant(safe-area-inset-bottom)
  bottom env(safe-area-inset-bottom)
// 富文本
.rich-content
  overflow hidden
  width 100%
  word-break break-word
  font-size 15px
  font-family BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Hiragino Sans GB', Arial, sans-serif
  line-height 1.5
  pre
    white-space pre-wrap
  *
    margin 0
    max-width 100%
    text-align justify
  table
    display table
    margin-bottom 10px
    width 100%
    border-collapse collapse
  .ue-table-interlace-color-single
    background-color #fcfcfc
  .ue-table-interlace-color-double
    background-color #f7faff
  td,
  th
    padding 5px 10px
    border 1px solid #DDD
  a
    color $color-main
  img
    margin 10px 0
    max-width 100%
  video
    max-width 100%
    width 100%
    height auto !important
// 遮罩
.mask-toast
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 111
  background-color $color-bg-toast
  &.opacity
    opacity 0
.no-data
  padding 30px 0 30px
  color $color-font-no
  text-align center
  font-size 12px
// 滚动中吸顶
.scroll
  .fixed-head,
  .scroll-head
    top 0
    left 0
    width 100%
  .fixed-head
    overflow hidden
    box-shadow $shadow